/* pages/guest/enter-table/enter-table.wxss */
.header {
  text-align: center;
  margin-bottom: 60rpx;
}

.logo {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 24rpx;
}

.title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: #333333;
}

.enter-methods {
  margin-bottom: 40rpx;
}

.method-card {
  margin-bottom: 32rpx;
}

.method-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  display: block;
  margin-bottom: 24rpx;
}

.method-card .input-field {
  margin-bottom: 24rpx;
}

.method-card .btn-primary,
.method-card .btn-secondary {
  width: 100%;
}

.table-info {
  margin-top: 40rpx;
}

.table-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  display: block;
  margin-bottom: 16rpx;
}

.table-time {
  font-size: 26rpx;
  color: #666666;
  display: block;
  margin-bottom: 16rpx;
}

.table-remark {
  font-size: 28rpx;
  color: #999999;
  display: block;
  margin-bottom: 32rpx;
}

.table-info .input-group {
  margin-bottom: 32rpx;
}

.table-info .btn-primary {
  width: 100%;
}


