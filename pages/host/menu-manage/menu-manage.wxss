/* pages/host/menu-manage/menu-manage.wxss */
.header-actions {
  display: flex;
  gap: 20rpx;
  margin-bottom: 24rpx;
}

.header-actions .btn-primary,
.header-actions .btn-secondary {
  flex: 1;
}

.table-info {
  margin-bottom: 24rpx;
}

.table-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  display: block;
  margin-bottom: 8rpx;
}

.table-time {
  font-size: 24rpx;
  color: #999999;
}

.menu-tabs {
  display: flex;
  gap: 16rpx;
  margin-bottom: 24rpx;
  overflow-x: auto;
  white-space: nowrap;
}

.tab-item {
  padding: 16rpx 32rpx;
  background-color: #f5f5f5;
  border-radius: 32rpx;
  font-size: 28rpx;
  color: #666666;
  display: inline-block;
}

.tab-item.active {
  background-color: #ff6b35;
  color: #ffffff;
}

.dish-list {
  margin-bottom: 120rpx;
}

.dish-item {
  display: flex;
  margin-bottom: 24rpx;
}

.dish-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.dish-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.dish-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 8rpx;
}

.dish-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.dish-status {
  display: flex;
  gap: 8rpx;
}

.status-tag {
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
}

.status-tag.recommended {
  background-color: #fff5f2;
  color: #ff6b35;
}

.status-tag.soldout {
  background-color: #f5f5f5;
  color: #999999;
}

.dish-desc {
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 16rpx;
  flex: 1;
}

.dish-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.dish-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff6b35;
}

.dish-actions {
  display: flex;
  gap: 24rpx;
}

.action-btn {
  font-size: 26rpx;
  color: #666666;
  padding: 8rpx 16rpx;
}

.action-btn.delete {
  color: #ff6b35;
}

.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx 40rpx;
  background-color: #ffffff;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.bottom-actions .btn-primary {
  width: 100%;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: none;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal.show {
  display: flex;
}

.modal-content {
  width: 90%;
  max-height: 80vh;
  background-color: #ffffff;
  border-radius: 24rpx;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}

.modal-close {
  font-size: 48rpx;
  color: #999999;
  line-height: 1;
}

.modal-body {
  padding: 32rpx;
  overflow-y: auto;
  flex: 1;
}

.modal-footer {
  display: flex;
  gap: 24rpx;
  padding: 32rpx;
  border-top: 1rpx solid #f0f0f0;
}

.modal-footer .btn-primary,
.modal-footer .btn-secondary {
  flex: 1;
}


