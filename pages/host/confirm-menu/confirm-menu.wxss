/* pages/host/confirm-menu/confirm-menu.wxss */
.table-info {
  margin-bottom: 24rpx;
}

.table-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  display: block;
  margin-bottom: 8rpx;
}

.table-time {
  font-size: 24rpx;
  color: #999999;
}

.summary {
  display: flex;
  justify-content: space-around;
  margin-bottom: 32rpx;
}

.summary-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.summary-item .label {
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 8rpx;
}

.summary-item .value {
  font-size: 48rpx;
  font-weight: bold;
  color: #ff6b35;
}

.final-menu {
  margin-bottom: 120rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 24rpx;
  display: block;
}

.menu-item {
  margin-bottom: 24rpx;
}

.menu-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.menu-header .dish-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.menu-header .dish-quantity {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff6b35;
}

.order-details {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.detail-item {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #666666;
}

.detail-item .user-name {
  margin-right: 16rpx;
}

.detail-item .quantity {
  color: #ff6b35;
  margin-right: 8rpx;
}

.detail-item .note {
  color: #999999;
}

.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx 40rpx;
  background-color: #ffffff;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.05);
  display: flex;
  gap: 24rpx;
}

.bottom-actions .btn-primary,
.bottom-actions .btn-secondary {
  flex: 1;
}


