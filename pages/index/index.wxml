<!--pages/index/index.wxml-->
<view class="container">
  <view class="header">
    <text class="title">家庭厨房点菜</text>
    <text class="subtitle">轻松协作，快乐聚餐</text>
  </view>

  <view class="actions">
    <view class="action-card" bindtap="createTable">
      <view class="icon">🍽️</view>
      <text class="action-title">创建饭桌</text>
      <text class="action-desc">我是主人，创建新饭桌</text>
    </view>

    <view class="action-card" bindtap="enterTable">
      <view class="icon">🎯</view>
      <text class="action-title">进入饭桌</text>
      <text class="action-desc">我是客人，通过链接进入</text>
    </view>
  </view>
</view>

