# 前端 Dockerfile
FROM node:18-alpine AS build

# 设置工作目录
WORKDIR /app

# 复制依赖文件
COPY front/package*.json ./

# 安装依赖
RUN npm install --silent

# 复制源代码
COPY front/ .

# 构建项目
RUN npm run build

# 生产阶段
FROM nginx:alpine

# 复制构建产物到 Nginx
COPY --from=build /app/dist /usr/share/nginx/html

# 复制 Nginx 配置
COPY nginx.conf /etc/nginx/conf.d/default.conf

# 暴露端口
EXPOSE 8060

# 启动 Nginx
CMD ["nginx", "-g", "daemon off;"]