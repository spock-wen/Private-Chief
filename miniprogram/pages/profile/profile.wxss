/* pages/profile/profile.wxss */
.login-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
}

.avatar-placeholder {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background-color: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 40rpx;
}

.avatar-icon {
  font-size: 80rpx;
}

.login-tip {
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 60rpx;
}

.profile-section {
  padding: 20rpx;
}

.profile-card {
  display: flex;
  align-items: center;
  padding: 40rpx;
  margin-bottom: 20rpx;
}

.avatar-wrapper {
  position: relative;
  width: 120rpx;
  height: 120rpx;
  margin-right: 32rpx;
  border-radius: 50%;
  overflow: hidden;
}

.avatar {
  width: 100%;
  height: 100%;
}

.avatar-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity 0.3s;
}

.avatar-wrapper:active .avatar-mask {
  opacity: 1;
}

.avatar-edit {
  font-size: 40rpx;
  color: #ffffff;
}

.user-info {
  flex: 1;
}

.nickname-row {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  margin-right: 16rpx;
}

.edit-icon {
  font-size: 28rpx;
  color: #999999;
}

.user-id {
  font-size: 24rpx;
  color: #999999;
}

.role-card {
  margin-bottom: 20rpx;
}

.role-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.role-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.role-badge {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  background-color: #fff3e0;
  color: #ff9800;
  border-radius: 4rpx;
}

.role-content {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.role-desc {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.5;
}

.remove-host-btn {
  align-self: flex-start;
}

.first-host-tip {
  font-size: 24rpx;
  color: #999999;
  font-style: italic;
}

.menu-list {
  background-color: #ffffff;
  border-radius: 16rpx;
  overflow: hidden;
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-text {
  font-size: 28rpx;
  color: #333333;
}

.menu-arrow {
  font-size: 28rpx;
  color: #999999;
}

