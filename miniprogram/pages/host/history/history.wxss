/* pages/host/history/history.wxss */
.table-item {
  margin-bottom: 24rpx;
}

.table-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.table-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.table-status {
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
}

.table-status.active {
  background-color: #e8f5e9;
  color: #4caf50;
}

.table-status.confirmed {
  background-color: #fff5f2;
  color: #ff6b35;
}

.table-status.finished {
  background-color: #f5f5f5;
  color: #999999;
}

.table-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  margin-bottom: 16rpx;
}

.table-time {
  font-size: 24rpx;
  color: #999999;
}

.table-remark {
  font-size: 26rpx;
  color: #666666;
}

.table-actions {
  display: flex;
  justify-content: flex-end;
}

.action-btn {
  font-size: 26rpx;
  color: #ff6b35;
  padding: 8rpx 16rpx;
}


