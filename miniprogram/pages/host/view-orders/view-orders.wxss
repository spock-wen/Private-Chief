/* pages/host/view-orders/view-orders.wxss */
.header-actions {
  display: flex;
  gap: 20rpx;
  margin-bottom: 24rpx;
}

.header-actions .btn-primary,
.header-actions .btn-secondary {
  flex: 1;
}

.view-mode-tabs {
  display: flex;
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 8rpx;
  margin-bottom: 24rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 16rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #666666;
}

.tab-item.active {
  background-color: #ff6b35;
  color: #ffffff;
}

.view-content {
  margin-bottom: 120rpx;
}

.person-section,
.dish-section {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.person-header,
.dish-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.person-name,
.dish-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.person-count,
.dish-count {
  font-size: 28rpx;
  color: #ff6b35;
  font-weight: bold;
}

.order-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.order-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx;
  background-color: #f9f9f9;
  border-radius: 12rpx;
}

.order-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.order-item .dish-name {
  font-size: 28rpx;
  font-weight: normal;
  margin-bottom: 8rpx;
}

.user-name {
  font-size: 28rpx;
  color: #333333;
}

.order-quantity {
  font-size: 28rpx;
  color: #ff6b35;
  font-weight: bold;
  margin: 0 16rpx;
}

.order-note {
  font-size: 24rpx;
  color: #999999;
  flex: 1;
}

.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx 40rpx;
  background-color: #ffffff;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.05);
  display: flex;
  gap: 24rpx;
}

.bottom-actions .btn-primary,
.bottom-actions .btn-secondary {
  flex: 1;
}


