page {
  background-color: #f5f5f5;
  height: 100%;
}

.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
}

.chat-list {
  flex: 1;
  padding: 20rpx;
  box-sizing: border-box;
  overflow-y: auto;
}

.message-item {
  display: flex;
  margin-bottom: 30rpx;
  align-items: flex-start;
}

.user-message {
  flex-direction: row-reverse;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  background-color: #ddd;
  flex-shrink: 0;
  margin: 0 10rpx;
}

.avatar image {
  width: 100%;
  height: 100%;
}

.content {
  max-width: 70%;
  padding: 20rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  line-height: 1.5;
  margin: 0 10rpx;
  position: relative;
  word-wrap: break-word;
}

.ai-message .content {
  background-color: #ffffff;
  color: #333;
  border-top-left-radius: 0;
}

.user-message .content {
  background-color: #07c160;
  color: #ffffff;
  border-top-right-radius: 0;
}

.input-area {
  background-color: #ffffff;
  padding: 20rpx;
  display: flex;
  align-items: center;
  border-top: 1rpx solid #e5e5e5;
  padding-bottom: env(safe-area-inset-bottom);
}

.msg-input {
  flex: 1;
  background-color: #f7f7f7;
  height: 70rpx;
  border-radius: 35rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  margin-right: 20rpx;
}

.send-btn {
  width: 120rpx;
  height: 70rpx;
  line-height: 70rpx;
  background-color: #07c160;
  color: white;
  font-size: 28rpx;
  padding: 0;
  border-radius: 35rpx;
  text-align: center;
}

.send-btn[disabled] {
  background-color: #a5d6b8 !important;
  color: #fff !important;
}

.loading-wrap {
  display: flex;
  justify-content: flex-start;
  padding-left: 120rpx;
  margin-bottom: 20rpx;
}

.dot {
  width: 12rpx;
  height: 12rpx;
  background-color: #ccc;
  border-radius: 50%;
  margin: 0 6rpx;
  animation: bounce 1.4s infinite ease-in-out both;
}

.dot:nth-child(1) { animation-delay: -0.32s; }
.dot:nth-child(2) { animation-delay: -0.16s; }

@keyframes bounce {
  0%, 80%, 100% { transform: scale(0); }
  40% { transform: scale(1); }
}
