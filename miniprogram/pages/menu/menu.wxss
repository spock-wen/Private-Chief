/* pages/menu/menu.wxss */
.category-tabs {
  display: flex;
  background-color: #ffffff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 28rpx;
  color: #666666;
  position: relative;
}

.tab-item.active {
  color: #ff6b35;
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background-color: #ff6b35;
  border-radius: 2rpx;
}

.manage-bar {
  padding: 20rpx;
  background-color: #ffffff;
  margin-bottom: 20rpx;
}

.dish-list {
  padding: 0 20rpx;
}

.dish-card {
  display: flex;
  margin-bottom: 20rpx;
  padding: 24rpx;
}

.dish-image-wrapper {
  width: 200rpx;
  height: 200rpx;
  margin-right: 24rpx;
  border-radius: 8rpx;
  overflow: hidden;
  background-color: #f5f5f5;
}

.dish-image {
  width: 100%;
  height: 100%;
}

.dish-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.dish-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.dish-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.dish-status {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.status-recommended {
  background-color: #fff3e0;
  color: #ff9800;
}

.status-soldout {
  background-color: #f5f5f5;
  color: #999999;
}

.dish-category {
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 8rpx;
}

.dish-description {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 16rpx;
  line-height: 1.5;
}

.dish-footer {
  margin-top: auto;
}

.dish-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff6b35;
}

.loading {
  text-align: center;
  padding: 40rpx;
  color: #999999;
  font-size: 28rpx;
}

